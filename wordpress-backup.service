[Unit]
Description=WordPress Backup Service
After=network.target
StartLimitIntervalSec=0
StartLimitBurst=3

[Service]
Type=simple
User=root
Group=root
Environment="TZ=Africa/Harare"
WorkingDirectory=/opt/wordpress-backup
ExecStart=/opt/wordpress-backup/venv/bin/python3 /opt/wordpress-backup/backup_manager.py
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
