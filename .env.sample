# WordPress Paths
WP_CONFIG_PATH="/var/www/example.com/wp-config.php"
WP_CONTENT_PATH="/var/www/example.com/htdocs/wp-content"
WP_TEMP_DIR="/var/tmp/wp-backup-work"

# MariaDB - Leave empty to auto-extract from wp-config.php
DB_HOST="localhost"
DB_NAME=""
DB_USER=""
DB_PASSWORD=""

# S3-Compatible Storage (Unlimited servers supported)
# Add as many servers as needed: S3_SERVER_1_*, S3_SERVER_2_*, etc.
# Backups will try each server in order until one succeeds.

# Server 1: iDrive E2
S3_SERVER_1_ENDPOINT="t5k4.ldn.idrivee2-61.com"
S3_SERVER_1_REGION="eu-west-3"
S3_SERVER_1_ACCESS_KEY=""
S3_SERVER_1_SECRET_KEY=""
S3_SERVER_1_BUCKET="wordpress-backups"
S3_SERVER_1_STORAGE_LIMIT_GB="100"

# Server 2: (Example - uncomment and configure)
# S3_SERVER_2_ENDPOINT="s3.amazonaws.com"
# S3_SERVER_2_REGION="us-east-1"
# S3_SERVER_2_ACCESS_KEY=""
# S3_SERVER_2_SECRET_KEY=""
# S3_SERVER_2_BUCKET="my-backup-bucket"
# S3_SERVER_2_STORAGE_LIMIT_GB="100"

# SMTP Configuration (For email reports)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="notifications@example.com"
SMTP_PASSWORD="app-specific-password"
SMTP_SENDER_EMAIL="backup-bot@example.com"

# Retention Settings
BACKUP_DIR="/opt/wordpress-backup/backups"
RETENTION_LOCAL_DAYS="2"
RETENTION_S3_DAYS="7"

# Database File (SQLite)
DB_FILE="backups.db"

# Cloudflare D1 Sync (Optional)
CLOUDFLARE_ACCOUNT_ID=""
CLOUDFLARE_API_TOKEN=""
CLOUDFLARE_D1_DATABASE_ID=""

# Deployment Settings (Used by deploy.sh)
REMOTE_HOST="your-server.com"
REMOTE_USER="ubuntu"
REMOTE_PORT="22"
REMOTE_DIR="/opt/wordpress-backup"

# Server Identifier (for shared S3 storage - auto-generated on first run)
SERVER_ID=""
